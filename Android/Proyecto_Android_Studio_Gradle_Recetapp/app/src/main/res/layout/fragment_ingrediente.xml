<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:weightSum="100"
    android:orientation="vertical"
    tools:context="com.example.carlo.recetapp.ingredientes_fragment"
    android:background="#E0F2F1">


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textStyle="italic"
            android:typeface="serif"
            android:gravity="center"
            android:layout_weight="39"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="\n\tPulsa para aÃ±adir un ingrediente \n"
            android:id="@+id/textView15"
            android:layout_above="@+id/expandableListView"
            android:layout_alignParentStart="false" />





        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_ingrediente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:layout_weight="0"
            app:backgroundTint="@color/colorPrimary"
            android:src="@drawable/ic_add_black_24dp"
            />


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:textStyle="italic"
        android:typeface="serif"
        android:gravity="center"
        android:layout_weight="39"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="\n\tIngredientes existentes en el sistema: \n"
        android:id="@+id/textView16"
        android:layout_above="@+id/expandableListView"
        android:layout_alignParentStart="false" />


    <ExpandableListView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="21.50"
        android:id="@+id/expandableListViewingredient"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/linearLayout3"
        android:layout_alignBottom="@+id/linearLayout3" />






</LinearLayout>
